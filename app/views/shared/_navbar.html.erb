<div class="navbar-container">
  <% # LOGO on the left %>
  <div class="navbar-logo">
      <%= link_to root_path, target: "_self"  do %>
      <%= image_tag asset_path("logo.png"), class: "navbar-logo" %>
      <% end %>
  </div>

  <% # DESKTOP LINKS %>
  <div class="navbar-link-box hidden-xs hidden-sm">
    <%= link_to 'Ask a question', new_question_path, class: "navbar-item navbar-link"%>
    <% if user_signed_in?  %>
      <% # AVATAR on DESKTOP %>
      <div class="navbar-item hidden-xs">
        <div class="dropdown">
          <img src="<%= image_url current_user.avatar %>" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown" >
          <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
              <li><%= link_to 'Profile', profile_path, class: "navbar-item navbar-link" %></li>
              <li><%= link_to 'Dashboard', dashboard_path, class: "navbar-item navbar-link" %></li>
              <li><%= link_to 'Log Out', destroy_user_session_path, class: "navbar-item navbar-link", method: :delete%></li>
          </ul>
        </div>
      </div>
    <% else %>
      <% # no user signed in %>
      <%= link_to 'Log in', new_user_session_path, class: "navbar-item navbar-link"%>
      <%= link_to 'Sign Up', new_user_registration_path, class: "navbar-item navbar-link"%>
    <% end %>
  </div>

  <% # PHONE LINKS %>
  <% if user_signed_in?  %>
    <% # avatar on phone %>
    <div class="navbar-item hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle navbar-item navbar-link" data-toggle="dropdown"></i>

        <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
            <li><%= link_to 'Ask a question', new_question_path, class: "navbar-item navbar-link"%></li>
            <li><%= link_to 'Profile', profile_path, class: "navbar-item navbar-link"%></li>
            <li><%= link_to 'Dashboard', dashboard_path, class: "navbar-item navbar-link" %></li>
            <li><%= link_to 'Log Out', destroy_user_session_path, class: "navbar-item navbar-link", method: :delete
            %></li>
        </ul>
      </div>
    </div>
  <% else %>
    <% # no user signed in %>
    <div class="navbar-link-box hidden-md hidden-lg">
      <%= link_to 'Log in', new_user_session_path, class: "navbar-item navbar-link"%>
    </div>
  <% end %>
</div>
